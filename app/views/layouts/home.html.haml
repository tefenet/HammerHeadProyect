                              %li
                                %a{:href => "single-article.html"} Single article
                          %li
                            %a{:href => "blog.html"} Blog
                          %li
                            %a{:href => "contact-page.html"} Contact
                      / end .main-navigation
                    / end .col-md-8
                  / end .main-header-container
                / end .row
              / end .container
            / end .second-parallax-content
